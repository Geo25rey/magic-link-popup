{
  "name": "magic-link-popup",
  "version": "0.0.3",
  "main": "./dist/magic-link-popup.cjs",
  "module": "./dist/magic-link-popup.mjs",
  "exports": {
    ".": {
      "require": "./dist/magic-link-popup.cjs",
      "import": "./dist/magic-link-popup.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf dist/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "yarn format:scripts && yarn format:styles",
    "prepare": "husky install && husky set .husky/pre-commit 'yarn lint-staged' && git add .husky/pre-commit",
    "uninstall-husky": "yarn remove husky --no-save && git config --unset core.hooksPath && yarn rimraf .husky",
    "release": "standard-version && git push --follow-tags origin master && yarn publish"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.1",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.2.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "stylelint": "^16.2.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-sass-guidelines": "^11.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "magic-sdk": "^27.0.0"
  },
  "dependencies": {
    "@magic-ext/oauth": "^21.0.0",
    "magic-sdk": "^27.0.0"
  }
}
